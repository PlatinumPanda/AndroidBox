<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/transparent_button" />
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/transparent_button"/>
            <stroke
                android:width="1dp"
                android:color="@color/transparent_button" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>